{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "lib": [
            "es2015",
            "dom"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "files": [
        "tmp/src-inlined/countdown.component.ts"
    ],
    "include": [
        "lib/countdown.html",
        "lib/countdown.scss"
    ],
    "exclude": [
        "node_modules",
        "bundles"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "angularCompilerOptions": {
        "skipMetadataEmit": false
    },
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    }
}